<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="generator" class="org.apache.camel.example.service.Generator"/>
  <bean id="reporting" class="org.apache.camel.example.service.Reporting"/>
  <!-- import the routes from external XML files -->
  <import resource="classpath:/META-INF/spring/camel-route-context-loadbalancer.xml"/>
  <import resource="classpath:/META-INF/spring/camel-route-template-mina.xml"/>
  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <!-- import the route template for mina into the camel context -->
    <routeTemplateContextRef ref="route-template-context-mina"/>
    <!-- import the routes of the load balancer into the camel context -->
    <routeContextRef ref="routes-load-balancer"/>
    <templatedRoute routeTemplateRef="route-template-mina" routeId="mina1">
      <parameter name="host" value="localhost:9991"/>
    </templatedRoute>
    <templatedRoute routeTemplateRef="route-template-mina" routeId="mina2">
      <parameter name="host" value="localhost:9992"/>
    </templatedRoute>
  </camelContext>

</beans>
